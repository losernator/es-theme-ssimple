<theme>
  <formatVersion>4</formatVersion>

  <!-- System View -->
  <view name="system">
      <image name="background" extra="true">
        <tile>false</tile>
        <size>0 1</size>
        <pos>0.5 0.5</pos>
        <origin>0.5 0.5</origin>
        <path>./art/top_bg.png</path>
      </image>

      <helpsystem name="help">
        <pos>1 1</pos>
        <textColor>7d7d7d</textColor>
        <iconColor>7d7d7d</iconColor>
      </helpsystem>

      <image name="CenterFade" extra="true">
        <tile>false</tile>
        <size>1 0.5</size>
        <pos>0.5 0.5</pos>
        <origin>0.5 0.5</origin>
        <path>./art/centerfade.png</path>
        <color>8b000050</color>
      </image>

      <image name="ControllerOverlay" extra="true">
        <color>aaaaaa</color>
      </image>
    </view>

    <view name="basic, detailed, video,grid">
      <image name="background">
        <tile>false</tile>
        <pos>0 0</pos>
        <origin>0 0</origin>
        <size>1 1</size>
        <path>./art/bg.png</path>
      </image>

      <image name="bg_overlay" extra="true">
        <tile>false</tile>
        <pos>0 0</pos>
        <origin>0 0</origin>
        <size>1 1</size>
        <path>./art/bg_overlay.png</path>
        <zIndex>34</zIndex>
      </image>

      <image name="main_logo" extra="true">
        <pos>0.2875 0.12</pos>
        <origin>0.5 0.5</origin>
        <maxSize>0.3046875 0.148148</maxSize>
        <path>./art/logo.png</path>
        <zIndex>35</zIndex>
      </image>
<!--
      <image name="sc_overlay_scanline" extra="true">
        <pos>0.777083333 0.191666667</pos>
        <origin>0.5 0</origin>
        <size>0.394791667 0.506481481</size>
        <path>./art/screen_scanline.png</path>
        <zIndex>31</zIndex>
      </image>
-->
      <textlist name="gamelist">
        <pos>0.020833333 0.215</pos>
        <size>0.533333333 0.674074074</size>
        <selectorColor>378ac7</selectorColor>
        <selectedColor>ffffff</selectedColor>
        <primaryColor>85a4b7</primaryColor>
        <secondaryColor>f8d700</secondaryColor>
        <fontPath>./art/font.ttf</fontPath>
        <forceUppercase>0</forceUppercase>
        <horizontalMargin>0.021</horizontalMargin>
        <lineSpacing>1.85</lineSpacing>
        <alignment>left</alignment>
        <fontSize>0.03</fontSize>
        <scrollSound>./art/scroll.wav</scrollSound>
        <selectorImagePath>./art/selector.png</selectorImagePath>
        <selectorHeight>0.066666667</selectorHeight>
        <selectorOffsetY>-0.008</selectorOffsetY>
        <zIndex>35</zIndex>
      </textlist>
      <helpsystem name="help">
        <pos>0.023958333 0.925925926</pos>
        <textColor>4d759b</textColor>
        <iconColor>4d759b</iconColor>
        <fontSize>0.023611</fontSize>
      </helpsystem>
    </view>

    <feature supported="video">
      <view name="video">
         <video name="md_video">
            <pos>0.777083333 0.444444444</pos>
            <maxSize>0.404166667 0.518518519</maxSize>
            <origin>0.5 0.5</origin>
            <delay>0.0</delay>
            <default></default>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
         </video>
      </view>
    </feature>
    <view name="grid">
      <imagegrid name="gamegrid">
        <pos>0.020833333 0.215</pos>
        <size>0.950 0.674074074</size>
        <margin>0.02 0.02</margin>
      </imagegrid>
      <gridtile name="default">
          <size>0.173 0.21</size>
          <backgroundColor>ffffff</backgroundColor>
      </gridtile>
      <gridtile name="selected">
        <backgroundColor>00000000</backgroundColor>
      </gridtile>
    </view>
    
    <view name="detailed, grid">
      <image name="md_image">
        <pos>0.777083333 0.444444444</pos>
        <maxSize>0.404166667 0.518518519</maxSize>
        <origin>0.5 0.5</origin>
      </image>
    </view>

    <view name="detailed, video, grid">
      <image name="md_marquee">
        <pos>0.777083333 0.140</pos>
        <origin>0.5 0.5</origin>
        <maxSize>0.300 0.180</maxSize>
      </image>
      <text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer, md_lbl_players, md_genre, md_developer, md_players, md_description">
        <pos>1 1</pos>
      </text>
      <datetime name="md_lastplayed, md_releasedate">
        <pos>1 1</pos>
      </datetime>
   </view>

   </theme>

   </view>

   <view name="basic">

      <textlist name="gamelist">
         <pos>0.020833333 0.203703704</pos>
         <size>0.533333333 0.674074074</size>
         <selectorColor>378ac7</selectorColor>
         <selectedColor>ffffff</selectedColor>
         <primaryColor>85a4b7</primaryColor>
         <secondaryColor>f8d700</secondaryColor>
         <fontPath>./art/font.ttf</fontPath>
         <forceUppercase>0</forceUppercase>
         <horizontalMargin>0.021</horizontalMargin>
         <lineSpacing>1.76</lineSpacing>
         <alignment>left</alignment>
         <fontSize>0.0398</fontSize>
         <scrollSound>./art/scroll.wav</scrollSound>
         <selectorImagePath>./art/selector.png</selectorImagePath>
         <selectorHeight>0.066666667</selectorHeight>
         <selectorOffsetY>0.0</selectorOffsetY>
         <zIndex>35</zIndex>
      </textlist>
      
      <helpsystem name="help">
       	<pos>0.023958333 0.925925926</pos>
         <textColor>4d759b</textColor>
         <iconColor>4d759b</iconColor>
         <fontSize>0.023611</fontSize>
      </helpsystem>
   </view>

   <feature supported="video">
      <view name="video">
         <video name="md_video">
            <pos>0.777083333 0.444444444</pos>
            <maxSize>0.404166667 0.518518519</maxSize>
            <origin>0.5 0.5</origin>         
            <delay>0.0</delay>
            <default></default>
            <showSnapshotNoVideo>true</showSnapshotNoVideo>
            <showSnapshotDelay>false</showSnapshotDelay>
         </video>
         <image name="md_marquee">
            <pos>0.777083333 0.140</pos>
            <origin>0.5 0.5</origin>
            <maxSize>0.300 0.180</maxSize>
         </image>
      </view>
   </feature>

   <view name="detailed">
      <image name="md_image">
         <pos>0.777083333 0.444444444</pos>
         <maxSize>0.404166667 0.518518519</maxSize>
         <origin>0.5 0.5</origin>
      </image>
   </view>

   <view name="detailed, video">

      <text name="md_lbl_genre, md_lbl_rating, md_lbl_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_lbl_releasedate">

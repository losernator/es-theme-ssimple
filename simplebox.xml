<theme>
   <formatVersion>3</formatVersion>

   <view name="system">
      <image name="background" extra="true">
         <tile>false</tile>
         <size>0 1</size>
         <pos>0.5 0.5</pos>
         <origin>0.5 0.5</origin>
         <path>./art/top_bg.png</path>
      </image>

      <helpsystem name="help">
      	 <pos>2 2</pos>
         <textColor>7d7d7d</textColor>
         <iconColor>7d7d7d</iconColor>
      </helpsystem>

      <image name="CenterFade" extra="true">
         <tile>false</tile>
         <size>1 0.5</size>
         <pos>0.5 0.5</pos>
         <origin>0.5 0.5</origin>
         <path>./art/centerfade.png</path>
         <color>8b000050</color>
      </image>

      <image name="ControllerOverlay" extra="true">
         <color>aaaaaa</color>
      </image>
   </view>

   <view name="basic, detailed, video">
      <image name="background">
         <tile>false</tile>
         <pos>0 0</pos>
         <origin>0 0</origin>
         <size>1 1</size>
         <path>./art/bg_color.png</path>
         <color>000000</color>
      </image>

      <image name="bg_overlay" extra="true">
         <tile>false</tile>
         <pos>0 0</pos>
         <origin>0 0</origin>
         <size>1 1</size>
         <path>./art/bg_overlay.png</path>
         <zIndex>34</zIndex>
      </image>

      <image name="main_logo" extra="true">
         <pos>0.2875 0.12</pos>
         <origin>0.5 0.5</origin>
         <maxSize>0.3046875 0.148148</maxSize>
         <path>./art/logo.png</path>
         <zIndex>35</zIndex>
      </image>

